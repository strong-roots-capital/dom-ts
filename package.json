{
  "name": "dom-ts",
  "version": "6.0.0",
  "description": "fp-ts binding for the DOM",
  "main": "cjs/index.js",
  "module": "es6/index.esm.js",
  "typings": "es6/index.d.ts",
  "author": "Wayne Van Son",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/waynevanson/dom-ts"
  },
  "scripts": {
    "commit": "cz",
    "build": "npm-run-all --parallel build:*",
    "build:cjs": "tsc --project .config/tsconfig.cjs.json",
    "build:es6": "tsc --project .config/tsconfig.es6.json",
    "prepublish": "yarn build && yarn test",
    "semantic-release": "semantic-release",
    "test": "jest",
    "watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn prepublish"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
        "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "commitizen": "^4.2.1",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "fp-ts": "^2.5.4",
    "fp-ts-contrib": "^0.1.19",
    "global-jsdom": "^7.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jsdom": "^16.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "semantic-release-cli": "^5.4.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "fp-ts": "^2.5.4",
    "fp-ts-contrib": "^0.1.19",
    "typescript": "^4.0.0"
  }
}
