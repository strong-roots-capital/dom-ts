{
  "name": "dom-ts",
  "version": "2.0.0",
  "description": "fp-ts binding for the DOM",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": "Wayne Van Son",
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js",
    "./meta": "./dist/meta/"
  },
  "private": false,
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/waynevanson/dom-ts"
  },
  "scripts": {
    "commit": "cz",
    "build": "microbundle src/index.ts",
    "prepublish": "yarn build && yarn test",
    "semantic-release": "semantic-release",
    "test": "jest",
    "watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn prepublish",
      "pre-push": "yarn prepublish"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**.*",
            "package.json"
          ]
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-export-namespace-from"
    ]
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "commitizen": "^4.2.1",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "fp-ts": "^2.5.4",
    "fp-ts-contrib": "^0.1.19",
    "global-jsdom": "^7.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jsdom": "^16.2.2",
    "microbundle": "^0.12.3",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "semantic-release-cli": "^5.4.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "fp-ts": "^2.5.4",
    "fp-ts-contrib": "^0.1.19",
    "typescript": "^4.0.0"
  }
}
